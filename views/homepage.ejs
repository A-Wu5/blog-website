<!-- Header -->
<%- include("partials/header.ejs") %>
<!--  -->

  
<main class="px-3">
  <h1>Welcome to my blog!</h1>
  <p class="lead">View my blog posts, create your own, and edit old posts.</p>
  <p class="lead">
    <a href="/new-post" class="btn btn-lg btn-light fw-bold border-white bg-white">Create a new post</a>
  </p>

    <% if (Object.keys(posts).length > 0){ %>
    <h2>Latest Posts</h2>
    <dl>
    <!-- Iterate through blog posts -->
    <% for (titles in posts){ %>
    <a href="/view/<%=posts[titles].title%>">
        <dt><%= posts[titles].title %></dt>
    </a>
    <dd>By <%=posts[titles].author_first %> <%=posts[titles].author_last%></dd>
    <%} %>
    </dl>
    <% } else { %>
    <h2>No posts created yet</h2>
    <% } %>
</main>
